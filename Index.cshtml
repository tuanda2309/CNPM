@{
    Layout = null;
}
<!doctype html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <title>POD BOOKING</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="~/img/logo.ico">
    <!-- GOOGLE FONTS CSS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins&display=swap">
    <!-- FONT AWESOME CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/home.css">
</head>

<body>

    <header>
        <div class="container">
            <div class="logoArea">
                <a asp-controller="Home" asp-action="Index" class="image"><img src="~/img/logo2.png" alt="POD Booking Logo"></a>
                <a asp-controller="Home" asp-action="Index" class="siteName">
                    <h1><span class="highlight">POD</span> BOOKING</h1>
                </a>
            </div>
            <div class="menuArea">
                <div class="menuBtn">
                    <span class="line-1"></span>
                    <span class="line-2"></span>
                    <span class="line-3"></span>
                </div>
            </div>
            <div class="navBar">
                <ul>
                    <li><a asp-controller="Home" class="active">🏠Trang chủ</a></li>
                    <li><a asp-controller="Room" asp-action="SeeRoom">💻Xem phòng</a></li>
                    <li><a href="~/service">🏪Dịch vụ</a></li>
                    <li><a href="~/makeRes">🕋Đặt phòng</a></li>
                    <li><a href="~/Vip">🕌Phòng VIP</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Staff"))
                        {
                            <li><a asp-controller="Room" asp-action="CreateRoom">✍️ Đăng phòng</a></li>
                        }
                        <li class="profile-dropdown">
                            <a href="javascript:void(0);" class="profile-btn">
                                @{
                                    var profileImage = Model?.ProfileImage ?? "~/img/default_image_path.png";
                                }
                                <img id="menu-profile-image" src="@Url.Content(profileImage)" alt="Profile Image" style="width: 30px; height: 30px; border-radius: 50%;">
                            </a>
                            <ul class="dropdown-content">
                                <li><a asp-controller="Account" asp-action="Profile">👤 Xem hồ sơ</a></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" style="background:none;border:none;padding:0;color:#337ab7;cursor:pointer;">
                                            🔓 Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">🔑Đăng nhập</a></li>
                        <li><a asp-controller="Account" asp-action="Register">✍🏻Đăng ký</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <div id="hero-banner">
        <div class="textArea">
        </div>
        <svg class="banner-wave" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 250">
            <path fill="#f8f8f8" fill-opacity="1" d="M0,96L120,122.7C240,149,480,203,720,218.7C960,235,1200,213,1320,202.7L1440,192L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z"></path>
        </svg>
    </div>

    <main id="main">
        <div class="main-container">
            <section>
                <div class="article-area">
                    <article>
                        <a href="~/P"><img src="~/img/p2.jpg" alt="Văn phòng trong ngày"></a>
                        <div class="article-container">
                            <h1><a href="~/P">Văn phòng trong ngày</a></h1>
                            <hr>
                            <h2><i class="fas fa-user"></i><a href=""> Đoàn Anh Tuấn </a><i class="far fa-clock"></i> 10 Tháng 6, 2024</h2>
                            <p>
                                Tại sao bạn không thuê văn phòng trong ngày khi bạn hoặc nhóm của mình cần một nơi nào đó để tập trung làm việc?
                                Văn phòng trong ngày của chúng tôi riêng tư, linh hoạt và thuận lợi, đồng thời có mọi thứ mà bạn cần để bắt tay ngay vào công việc.
                                Bao gồm Wi-Fi dành cho doanh nghiệp và đồ nội thất kiểu công thái học.
                                Vì vậy, dù bạn chỉ muốn dùng một văn phòng đầy đủ dịch vụ phù hợp về quy mô hoặc cần một cơ sở trong thời gian ngắn cho một dự án, chúng tôi đều có giải pháp cho bạn.
                                Tất nhiên là nếu bạn không cần sử dụng văn phòng cả ngày, chúng tôi cũng có lựa chọn cho thuê không gian văn phòng theo giờ.
                            </p>
                        </div>
                    </article>
                    <article>
                        <a href="~/P1"><img src="~/img/p3.jpg" alt="Phòng họp"></a>
                        <div class="article-container">
                            <h1><a href="~/P1">Phòng họp</a></h1>
                            <hr>
                            <h2><i class="fas fa-user"></i><a href=""> Nguyễn Võ Đăng Khoa </a><i class="far fa-clock"></i> 11 Tháng 6, 2024</h2>
                            <p>
                                Có vô vàn lý do khiến bạn cần một nơi để gặp gỡ.
                                Rất may, chúng tôi cung cấp hơn 10.000 phòng họp để bạn lựa chọn.
                                Từ phòng nhỏ đến phòng hội đồng và phòng hội nghị lớn.
                                Chỉ cần vài phút là bạn có thể đặt trước phòng họp mà mình muốn trong bao lâu tùy thích.
                            </p>
                        </div>
                    </article>
                    <!-- Add other articles similarly -->
                </div>
                <div class="buttonArea">
                    <a href="~/index" class="btn">Quay lại trang chủ</a>
                </div>
            </section>

            <aside>
                <!-- Social media, search, and popular post sections -->
            </aside>
        </div>
    </main>

    <footer>
        <div class="container">
            <nav class="navBar">
                <ul>
                    <li><a href="~/">TRANG CHỦ</a></li>
                    <li><a href="#">GIỚI THIỆU</a></li>
                    <li><a href="#">LIÊN HỆ: <span style="color: rgb(255, 0, 140);">0814197209</span></a></li>
                </ul>
            </nav>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/navbar.js"></script>
    <script>
        $(document).ready(function () {
            $(".menuBtn").click(function () {
                $(".navBar").toggleClass("show");
            });

            $("#searchButton").click(function () {
                const searchQuery = $("#searchInput").val().toLowerCase();
                if (searchQuery) {
                    if (searchQuery === "văn phòng trong ngày") {
                        window.location.href = "~/gameDetails";
                    } else if (searchQuery === "phòng họp") {
                        window.location.href = "~/gameDetails1";
                    } else if (searchQuery === "không gian làm việc chung") {
                        window.location.href = "~/gameDetails6";
                    } else if (searchQuery === "văn phòng ảo") {
                        window.location.href = "~/gameDetails7";
                    } else {
                        window.location.href = `~/searchResults?search=${encodeURIComponent(searchQuery)}`;
                    }
                }
            });
        });
    </script>
    <script>
        document.querySelector('.profile-btn').addEventListener('click', function () {
            const dropdown = document.querySelector('.dropdown-content');
            // Toggle the dropdown menu
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        });

        // Ẩn dropdown khi click ra ngoài
        window.onclick = function (event) {
            if (!event.target.matches('#menu-profile-image')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.style.display === "block") {
                        openDropdown.style.display = "none";
                    }
                }
            }
        }

    </script>

</body>

</html>
